<mapper namespace="com.tofit.mvc.model.dao.FavoritesDao">
	
	<insert id="insertFeedImages" parameterType="FeedImage">
		INSERT INTO FEEDIMAGE(feed_id, img)
		VALUES (#{feedId}, #{img})
	</insert>
	
	<select id="selectFeedImagesByFeedId" parameterType="int" resultType="FeedImage">
		 SELECT * FROM FEEDIMAGE WHERE feed_id = #{feedId} 
	</select>
	
	<delete id="deleteFeedImage" parameterType="int">
		DELETE FROM FEEDIMAGE WHERE image_id = #{imageId}
	</delete>
</mapper>